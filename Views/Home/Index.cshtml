@model List<Products>;

<div class="row pb-3">
    @foreach (var obj in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                        <img src="@obj.imgUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">@obj.Name</p>
                                
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-85 text-center mb-0">
                                    <b>Price:</b>
                                    <span >
                                        @obj.Price
                                    </span>
                                </p>
                                For more details <a href="@obj.url" target="_blank">click here </a>

                            </div>
                            
                       
                    </div>
                </div>
            </div>
        </div>
        </div>
    }
</div>